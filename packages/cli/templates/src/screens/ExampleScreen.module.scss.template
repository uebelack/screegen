.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100%;
  padding: 60px 40px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-family: 'Lexend', system-ui, sans-serif;
}

.header {
  text-align: center;
  margin-bottom: 60px;
}

.title {
  font-size: 120px;
  font-weight: 400;
  margin: 0 0 16px 0;
}

.subtitle {
  font-size: 60px;
  font-weight: 300;
  opacity: 0.9;
  margin: 0;
}
